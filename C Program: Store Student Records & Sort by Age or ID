#include <stdio.h>
#include <string.h>

struct Student {
    int id;
    char name[50];
    int age;
};

void sortByID(struct Student s[], int n) {
    struct Student temp;
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (s[i].id > s[j].id) {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
        }
    }
}

void sortByAge(struct Student s[], int n) {
    struct Student temp;
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (s[i].age > s[j].age) {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
        }
    }
}

int main() {
    struct Student s[100];
    int n, choice;

    printf("Enter number of students: ");
    scanf("%d", &n);

    // Input records
    for (int i = 0; i < n; i++) {
        printf("\nEnter data for student %d:\n", i + 1);
        printf("ID: ");
        scanf("%d", &s[i].id);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Age: ");
        scanf("%d", &s[i].age);
    }

    printf("\nSort students by:\n1. ID\n2. Age\nEnter choice: ");
    scanf("%d", &choice);

    if (choice == 1) {
        sortByID(s, n);
        printf("\n--- Sorted by ID ---\n");
    } 
    else if (choice == 2) {
        sortByAge(s, n);
        printf("\n--- Sorted by Age ---\n");
    } 
    else {
        printf("Invalid choice!\n");
        return 0;
    }

    // Display records
    for (int i = 0; i < n; i++) {
        printf("\nStudent %d:\n", i + 1);
        printf("ID   : %d\n", s[i].id);
        printf("Name : %s\n", s[i].name);
        printf("Age  : %d\n", s[i].age);
    }

    return 0;
}
