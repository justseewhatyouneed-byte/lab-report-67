#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    char delimiter[] = " "; // Split by space
    char *token;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0'; // Remove trailing newline

    // Get the first token
    token = strtok(str, delimiter);

    printf("Substrings:\n");
    while (token != NULL) {
        printf("%s\n", token); // Print each substring
        token = strtok(NULL, delimiter); // Get next token
    }

    return 0;
}
