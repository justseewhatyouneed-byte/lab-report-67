#include <stdio.h>
#include <sys/stat.h>

int main() {
    char filename[100];

    printf("Enter the file name: ");
    scanf("%s", filename);

    // Set file permission to read-only for owner
    if (chmod(filename, S_IRUSR) == 0) {
        printf("File '%s' is now read-only.\n", filename);
    } else {
        perror("Error setting file permission");
    }

    return 0;
}
