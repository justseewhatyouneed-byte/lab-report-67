#include <stdio.h>
#include <string.h>

int main() {
    char str[] = "C programming is fun";
    char delim[] = " ";   // Delimiter (space in this case)
    char *token;

    printf("Original string: %s\n", str);
    printf("Substrings:\n");

    // Get the first token
    token = strtok(str, delim);

    // Loop through all tokens
    while (token != NULL) {
        printf("%s\n", token);
        token = strtok(NULL, delim);
    }

    return 0;
}
