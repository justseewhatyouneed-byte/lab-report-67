#include <stdio.h>

int main() {
    int hours;
    int minutes, seconds;

    printf("Enter hours: ");
    scanf("%d", &hours);

    minutes = hours * 60;        // 1 hour = 60 minutes
    seconds = hours * 3600;      // 1 hour = 3600 seconds

    printf("%d hour(s) = %d minute(s) = %d second(s)\n", hours, minutes, seconds);

    return 0;
}
