#include <stdio.h>

int main() {
    int m, n, i, j;

    printf("Enter number of rows: ");
    scanf("%d", &m);

    printf("Enter number of columns: ");
    scanf("%d", &n);

    int matrix[m][n];

    // Input matrix elements
    printf("Enter elements of the matrix:\n");
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    printf("Boundary elements of the matrix are:\n");

    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            // Check if element is in first row, last row, first column, or last column
            if (i == 0 || i == m - 1 || j == 0 || j == n - 1) {
                printf("%d ", matrix[i][j]);
            } else {
                printf("  "); // For alignment
            }
        }
        printf("\n");
    }

    return 0;
}
