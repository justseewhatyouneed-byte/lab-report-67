#include <stdio.h>

int main() {
    int r, c, i, j, k, temp;

    printf("Enter number of rows: ");
    scanf("%d", &r);

    printf("Enter number of columns: ");
    scanf("%d", &c);

    int arr[r][c];

    // Input 2D array
    printf("Enter elements of the array:\n");
    for (i = 0; i < r; i++) {
        for (j = 0; j < c; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    // Sort each row using simple bubble sort
    for (i = 0; i < r; i++) {
        for (j = 0; j < c - 1; j++) {
            for (k = 0; k < c - j - 1; k++) {
                if (arr[i][k] > arr[i][k + 1]) {
                    temp = arr[i][k];
                    arr[i][k] = arr[i][k + 1];
                    arr[i][k + 1] = temp;
                }
            }
        }
    }

    // Print sorted 2D array
    printf("Sorted 2D array (row-wise):\n");
    for (i = 0; i < r; i++) {
        for (j = 0; j < c; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }

    return 0;
}
