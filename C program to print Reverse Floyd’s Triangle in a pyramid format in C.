#include <stdio.h>

int main() {
    int n, i, j, num = 1, total = 0, space;

    printf("Enter number of rows: ");
    scanf("%d", &n);

    // Calculate total numbers in n rows: 1 + 2 + ... + n = n*(n+1)/2
    total = n * (n + 1) / 2;
    num = total;

    for (i = n; i >= 1; i--) {
        // Print leading spaces
        for (space = 0; space < n - i; space++) {
            printf("  "); // Two spaces for alignment
        }

        // Print numbers
        for (j = 1; j <= i; j++) {
            printf("%3d ", num--);
        }

        printf("\n");
    }

    return 0;
}
