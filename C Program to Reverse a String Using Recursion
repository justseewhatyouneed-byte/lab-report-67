#include <stdio.h>
#include <string.h>

// Recursive function to reverse string
void reverse(char str[], int start, int end) {
    if (start >= end)  // Base case
        return;

    // Swap characters
    char temp = str[start];
    str[start] = str[end];
    str[end] = temp;

    // Recursive call
    reverse(str, start + 1, end - 1);
}

int main() {
    char str[100];

    printf("Enter a string: ");
    scanf("%s", str);  // For single word input. Use fgets for full sentence

    int len = strlen(str);

    reverse(str, 0, len - 1);

    printf("Reversed string: %s\n", str);

    return 0;
}
