#include <stdio.h>
#include <time.h>

int main() {
    time_t t;
    struct tm *localTime, *gmtTime;

    // Get current time
    t = time(NULL);

    // Convert to local time
    localTime = localtime(&t);

    // Convert to GMT/UTC
    gmtTime = gmtime(&t);

    // Display local time
    printf("Local Time: %02d-%02d-%04d %02d:%02d:%02d\n",
           localTime->tm_mday,
           localTime->tm_mon + 1,
           localTime->tm_year + 1900,
           localTime->tm_hour,
           localTime->tm_min,
           localTime->tm_sec);

    // Display GMT/UTC time
    printf("GMT/UTC Time: %02d-%02d-%04d %02d:%02d:%02d\n",
           gmtTime->tm_mday,
           gmtTime->tm_mon + 1,
           gmtTime->tm_year + 1900,
           gmtTime->tm_hour,
           gmtTime->tm_min,
           gmtTime->tm_sec);

    return 0;
}
