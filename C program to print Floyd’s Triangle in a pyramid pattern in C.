#include <stdio.h>

int main() {
    int n, i, j, num = 1, space;

    printf("Enter number of rows: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        // Print leading spaces
        for (space = 1; space <= n - i; space++) {
            printf("  "); // Two spaces for alignment
        }

        // Print numbers
        for (j = 1; j <= i; j++) {
            printf("%3d ", num++);
        }

        printf("\n");
    }

    return 0;
}
