#include <stdio.h>

struct Distance {
    int feet;
    float inch;
};

int main() {
    struct Distance d[100], total;
    int n;

    total.feet = 0;
    total.inch = 0.0;

    printf("Enter number of distances: ");
    scanf("%d", &n);

    // Input distances
    for (int i = 0; i < n; i++) {
        printf("\nEnter distance %d:\n", i + 1);
        printf("Feet: ");
        scanf("%d", &d[i].feet);

        printf("Inches: ");
        scanf("%f", &d[i].inch);

        // Add to total
        total.feet += d[i].feet;
        total.inch += d[i].inch;
    }

    // Convert inches to feet if >= 12
    total.feet += (int)(total.inch / 12);
    total.inch = (int)total.inch % 12 + (total.inch - (int)total.inch);

    printf("\n--- Total Distance ---\n");
    printf("Feet: %d\n", total.feet);
    printf("Inches: %.2f\n", total.inch);

    return 0;
}
