#include <stdio.h>
#include <math.h>
#include <string.h>

int main() {
    char hex[20];
    int decimal = 0, base = 1, len, value;

    printf("Enter a hexadecimal number: ");
    scanf("%s", hex);

    len = strlen(hex);

    // Start from the last digit
    for (int i = len - 1; i >= 0; i--) {
        // If character is 0–9
        if (hex[i] >= '0' && hex[i] <= '9') {
            value = hex[i] - '0';
        }
        // If character is A–F
        else if (hex[i] >= 'A' && hex[i] <= 'F') {
            value = hex[i] - 'A' + 10;
        }
        // If character is a–f
        else if (hex[i] >= 'a' && hex[i] <= 'f') {
            value = hex[i] - 'a' + 10;
        }
        else {
            printf("Invalid Hexadecimal Character!\n");
            return 0;
        }

        decimal += value * base;
        base *= 16;
    }

    printf("Hexadecimal Number : %s\n", hex);
    printf("Decimal Number     : %d\n", decimal);

    return 0;
}
