#include <stdio.h>
#include <time.h>

int main() {
    time_t t;
    struct tm *currentTime;

    // Get current time
    t = time(NULL);
    currentTime = localtime(&t);

    printf("Current Date: %02d-%02d-%04d\n",
           currentTime->tm_mday,
           currentTime->tm_mon + 1,   // Months are 0-11
           currentTime->tm_year + 1900); // Years since 1900

    printf("Current Time: %02d:%02d:%02d\n",
           currentTime->tm_hour,
           currentTime->tm_min,
           currentTime->tm_sec);

    return 0;
}
