#include <stdio.h>

int main() {
    int i, j, n, space;

    printf("Enter number of rows for the upper half of diamond: ");
    scanf("%d", &n);

    // Upper hollow pyramid
    for (i = 1; i <= n; i++) {
        // Print leading spaces
        for (space = 1; space <= n - i; space++) {
            printf(" ");
        }

        // Print stars and spaces
        for (j = 1; j <= (2 * i - 1); j++) {
            if (j == 1 || j == (2 * i - 1))
                printf("*");
            else
                printf(" ");
        }

        printf("\n");
    }

    // Lower hollow inverted pyramid
    for (i = n - 1; i >= 1; i--) {
        // Print leading spaces
        for (space = 1; space <= n - i; space++) {
            printf(" ");
        }

        // Print stars and spaces
        for (j = 1; j <= (2 * i - 1); j++) {
            if (j == 1 || j == (2 * i - 1))
                printf("*");
            else
                printf(" ");
        }

        printf("\n");
    }

    return 0;
}
