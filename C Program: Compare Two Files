#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *file1, *file2;
    char filename1[100], filename2[100];
    char ch1, ch2;
    int line = 1, pos = 1;
    int mismatchFound = 0;

    printf("Enter first file name: ");
    scanf("%s", filename1);

    printf("Enter second file name: ");
    scanf("%s", filename2);

    file1 = fopen(filename1, "r");
    file2 = fopen(filename2, "r");

    if (file1 == NULL || file2 == NULL) {
        printf("Error opening files!\n");
        return 1;
    }

    // Compare files character by character
    while ((ch1 = fgetc(file1)) != EOF && (ch2 = fgetc(file2)) != EOF) {
        if (ch1 != ch2) {
            printf("Mismatch at line %d, position %d: '%c' != '%c'\n", line, pos, ch1, ch2);
            mismatchFound = 1;
        }
        if (ch1 == '\n') {
            line++;
            pos = 0;
        }
        pos++;
    }

    // Check if files have different lengths
    if (fgetc(file1) != EOF || fgetc(file2) != EOF) {
        printf("Files have different lengths.\n");
        mismatchFound = 1;
    }

    if (!mismatchFound) {
        printf("Files are identical.\n");
    }

    fclose(file1);
    fclose(file2);
    return 0;
}
