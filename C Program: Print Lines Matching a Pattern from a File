#include <stdio.h>
#include <string.h>

#define MAX 1000

int main() {
    char filename[100], pattern[100];
    char line[MAX];
    FILE *fp;
    int found = 0;

    printf("Enter file name: ");
    scanf("%s", filename);

    printf("Enter pattern to search: ");
    scanf("%s", pattern);

    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    printf("\n--- Lines containing pattern '%s' ---\n", pattern);
    while (fgets(line, MAX, fp) != NULL) {
        if (strstr(line, pattern) != NULL) {  // Check if pattern exists in line
            printf("%s", line);
            found = 1;
        }
    }

    if (!found) {
        printf("No matching pattern found.\n");
    }

    fclose(fp);
    return 0;
}
